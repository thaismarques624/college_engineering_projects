
:-use_module(library(pce)).
:-use_module(library(pce_style_item)).

inicio:-
	new(Menu, dialog('CMV VER. 1.0', size(500,400))),
	new(L,label(nome,'CLÍNICA A: PRE-DIAGNÓSTICO')),
	new(A,label(nome,'LT.Co')),
	new(@boton,button('FORMULARIO',message(@prolog,botones))),
	new(@texto,label(nome,'COMECE O FORMULÁRIO: ')),
	new(Sair,button('SAIR',and(message(Menu, destroy),message(Menu,free)))),
	new(@respl,label(nome,'')),

	send(Menu,append(L)),new(@btncarrera,button('Diagnostico?')),
	send(Menu,display,L,point(0,10)),
	send(Menu,display,@texto,point(0,100)),
	send(Menu,display,@respl,point(0,130)),
	send(Menu,display,@boton,point(0,135)),
	send(Menu,display,Sair,point(0,290)),
	send(Menu,display,A,point(0,330)),
	send(Menu,open_centered).

%doenças:

falas('Pré-diagnostico de Alergia Alimentar'):-dalergiaalimentar,!.
falas('Pré-diagnostico de Colica Equina'):-dcolicaequina,!.
falas('Pré-diagnostico de Displasia Coxofemoral'):-ddisplasiacoxofemoral,!.
falas('Pré-diagnostico de Doença do Carrapato'):-ddoencadocarrapato,!.
falas('Pré-diagnostico de Insuficiência Renal'):-dinsuficienciarenal,!.
falas('Pré-diagnostico de Leishmaniose(Calazar)'):-dleish,!.
falas('
DADOS INSUFICIENTES
CONSULTE A MÉDICA
FONE: 3083-2048
').

%Perguntas identificadoras das doenças.

%----ALERGIA ALIMENTAR----
dalergiaalimentar:-
	pergunta('Seu animal está com coceira?'),
	pergunta('Seu animal possui vermelhidão?'),
	pergunta('A pele do seu animal está descamando?'),
	pergunta('Seu animal possui alguma lesão?'),
	!.

%----COLICA EQUINAL----
dcolicaequina:-
	pergunta('Seu animal está inquieto constantemente?'),
	pergunta('Seu animal estica as patas constantemente ou deita?'),
	pergunta('Seu animal está suando muito?'),
	pergunta('Seu animal é um cavalo?'),
	!.

%----DISPLASIA COXO FEMORAL----
ddisplasiacoxofemoral:-
	pergunta('Seu animal hesita usar as patas traseiras?'),
	pergunta('Seu animal manca constantemente?'),
	pergunta('Seu animal perdeu peso?'),
	pergunta('Seu animal é um cachorro?'),
	!.

%----DOENÇA DO CARRAPATO----
ddoencadocarrapato:-
	pergunta('Seu animal está com febre?'),
	pergunta('Seu animal está com falta de apetite?'),
	pergunta('Seu animal apresenta sangramento nasal ou urinário?'),
	!.

%----INSUFICIENCIA RENAL----
dinsuficienciarenal:-
	pergunta('Seu animal está com prolemas de apetite?'),
	pergunta('Seu animal está vomitando constantemente?'),
	pergunta('Seu animal está urinando desreguladamente?'),
	!.

%----LEISHMANIOSE----
dleish:-
	pergunta('Seu animal perdeu peso?'),
	pergunta('Seu animal teve diarreia?'),
	pergunta('Seu animal está vomitando constantemente?'),
	pergunta('Seu animal está com feridas?'),
	!.

% Controla os processos de perguntas e respostas, quando o usuario clica
% em si e em no.

:-dynamic si/1,no/1.
perguntar(Problema):- new(Di,dialog('Pré-diagnostico')),
     new(L2,label(texto,'Responda:')),
     new(La,label(prob,Problema)),
     new(B1,button(si,and(message(Di,return,sim)))),
     new(B2,button(no,and(message(Di,return,nao)))),

         send(Di,append(L2)),
	 send(Di,append(La)),
	 send(Di,append(B1)),
	 send(Di,append(B2)),

	 send(Di,default_button,si),
	 send(Di,open_centered),get(Di,confirm,Answer),
	 write(Answer),send(Di,destroy),
	 ((Answer==sim)->assert(si(Problema));
	 assert(no(Problema)),fail).

%Para limpar depois de responder uma pergunta.

pergunta(S):-(si(S)->true; (no(S)->fail; perguntar(S))).
limpiar :- retract(si(_)),fail.
limpiar :- retract(no(_)),fail.
limpiar.

%Aqui é o processo de selecionar.

botones :- lim,
	send(@boton,free),
	send(@btncarrera,free),
	falas(Fala),
	send(@texto,selection(' ')),
	send(@respl,selection(Fala)),
	new(@boton,button('inicia',message(@prolog,botones))),
        send(Menu,display,@boton,point(40,50)),
        send(Menu,display,@btncarrera,point(20,50)),
limpiar.
lim :- send(@respl, selection('')).
